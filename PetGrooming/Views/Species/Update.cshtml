@model PetGrooming.Models.Species

@{
    ViewBag.Title = "Update";
}

<!-- Form to get details form the user and to call the [HttpPost] ActionResult ADD -->
<h2>Update Species</h2>
<form action="/Species/Update/@Model.SpeciesID" method="POST">
    <div class="form-group row">
        <div class="col-sm-10">
            <label class="col-sm-2 col-form-label">Species Name</label>
            <input class="form-control" type="text" value="@Model.Name" id="Name" name="Name" /><br />
        </div>
    </div>
    <!--Button to submit a post request to the controller to execute the update query-->
    <input type="submit" class="btn btn-primary" value="Update" />
    <!--Link to go back to the list page-->
    <a class="btn btn-warning" href="/Species/List">Back</a>
</form>

